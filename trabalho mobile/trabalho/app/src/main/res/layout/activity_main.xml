<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modelo.MainActivity"
    android:orientation="vertical"
    android:background="#D6E3C7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="SellSwift"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/mainAC"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btClientes"
            android:layout_width="403dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/mainAC"
            android:text="Clientes" />

        <Button
            android:id="@+id/btLancarPedido"
            android:layout_width="403dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/mainAC"
            android:text="LanÃ§ar pedido" />

        <Button
            android:id="@+id/btItens"
            android:layout_width="403dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/mainAC"
            android:text="Itens de venda" />
    </LinearLayout>
</LinearLayout>